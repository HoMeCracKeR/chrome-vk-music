{
  "manifest_version": 2,
  "name": "MusicVkontakte",
  "version": "1.4",
  "description": "Download music from vk.com/vkontake.ru social network to your computer.",
  "background": {
    "scripts": ["bg.js"]
  },
  "page_action": {
    "default_icon" : "icon.png",
    "default_title" : "Click to show music links"
  },
  "permissions": [
    "tabs",
    "http://www.vk.com/*", "http://vk.com/*",
    "https://www.vk.com/*", "https://vk.com/*",
    "http://www.vkontakte.ru/*", "http://vkontakte.ru/*",
    "https://www.vkontakte.ru/*", "https://vkontakte.ru/*"
  ]
}